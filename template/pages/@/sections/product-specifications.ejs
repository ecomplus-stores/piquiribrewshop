<% if (_.state.specifications) { %>
  <section id="product-specs" class="product-specs my-4 my-lg-5">
    <div class="container">
      <div class="apx-title">
        <p class="lead">
          <%= _.dictionary('productSpecifications') %>
        </p>
      </div>
      
      <table class="table table-striped">
        <tbody>
          <% for (const gridId in _.state.specifications) {
            if (_.state.specifications[gridId]) {
              %>
              <tr>
                <td class="text-muted">
                  <%= _.ecomUtils.gridTitle(gridId, _.grids) %>
                </td>
                <td>
                  <%= _.ecomUtils.specTextValue(_.state, gridId, _.grids) %>
                </td>
              </tr>
              <%
            }
          } %>
        </tbody>
      </table>
    </div>
  </section>
<% } %>
