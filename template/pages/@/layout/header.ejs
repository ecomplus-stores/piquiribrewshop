        <button
          class="btn header__toggler<%= hasMegamenu ? ' d-lg-none' : '' %>"
          type="button"
          id="theme_header-menu-trigger"
          onclick="toggleSidenav()"
          aria-label="Toggle side navigation"
        >
        </button>
      </div>

      <div class="col-auto col-lg-auto pl-0 pl-md-2 pl-lg-3 header__logo-block">
        <a href="/">
